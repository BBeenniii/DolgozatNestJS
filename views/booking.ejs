<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Movie Booking</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <h1 class="mt-5">Book a Movie</h1>
            <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% errors.forEach(function(error) { %>
                            <li><%= error %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <form action="/book" method="POST" class="mt-4">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= data ? data.name : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= data ? data.email : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="dateTime" class="form-label">Date and Time</label>
                    <input type="datetime-local" class="form-control" id="dateTime" name="dateTime" value="<%= data ? data.dateTime : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="numberOfGuests" class="form-label">Number of Guests</label>
                    <input type="number" class="form-control" id="numberOfGuests" name="numberOfGuests" min="1" max="10" value="<%= data ? data.numberOfGuests : 1 %>" required>
                </div>

                <button type="submit" class="btn btn-primary">Book Now</button>
            </form>
        </div>
    </body>
</html>